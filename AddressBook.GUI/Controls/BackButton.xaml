<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fontawesome="clr-namespace:FontAwesome"
             x:Class="AddressBook.GUI.Controls.BackButton"
             x:Name="Self">

    <Button
        Text="{x:Static fontawesome:FontAwesomeIcons.ArrowLeft}"
        FontFamily="FAS"
        FontSize="{Binding Source={x:Reference Self}, Path=Size}"
        BackgroundColor="Transparent"
        TextColor="CornflowerBlue"
        Command="{Binding Source={x:Reference Self}, Path=NavigateBackCommand}" />

</ContentView>