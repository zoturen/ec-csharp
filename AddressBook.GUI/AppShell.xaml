<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="AddressBook.GUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AddressBook.GUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AddressBook.GUI">

    <ShellContent
        Title="Contacts"
        ContentTemplate="{DataTemplate views:ContactListView}"
        Route="ContactList" />

    <ShellContent
        Title="New Contact"
        ContentTemplate="{DataTemplate views:NewContactView}"
        Route="NewContactView" />

    <ShellContent
        Title="Edit Contact"
        ContentTemplate="{DataTemplate views:EditContactView}"
        Route="EditContactView" />

</Shell>